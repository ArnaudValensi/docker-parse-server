#ENV REST_API_KEY
#ENV DOTNET_KEY
#ENV JAVASCRIPT_KEY
#ENV DOTNET_KEY
#ENV FILE_KEY
#ENV FACEBOOK_APP_IDS "xx,xxx"

ENV PARSE_PORT 1337
ENV PUBLIC_PORT 1338

EXPOSE $PARSE_PORT
EXPOSE $PUBLIC_PORT

VOLUME $PARSE_CLOUD
ENV NODE_PATH .

CMD [ "npm", "start" ]
