FROM node:latest

ENV PARSE_HOME /parse
ENV PARSE_CLOUD /parse/parse-cloud

ADD index.js ${PARSE_HOME}/index.js
ADD package.json ${PARSE_HOME}/package.json
ADD jsconfig.json ${PARSE_HOME}/jsconfig.json

COPY parse-cloud $PARSE_CLOUD

WORKDIR $PARSE_HOME
RUN npm install

